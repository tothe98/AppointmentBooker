<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />

            <size
                android:width="200dp"
                android:height="50dp" />
            <solid/>
        </shape>
    </item>
    <item
        android:left="30dp"
        android:right="30dp">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="@color/lavender"/>
        </shape>
    </item>

</layer-list>